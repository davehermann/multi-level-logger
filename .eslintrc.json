{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "no-extra-boolean-cast": ["off"],
        "no-unused-vars": ["warn"],
        "quotes": ["warn", "backtick"],
        "semi": ["error", "always"]
    }
}
